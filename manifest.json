{
  "manifest_version": 3,
  "name": "Home Free Accessibility Extension",
  "version": "1.0",
  "description": "Shows accessibility score on real estate listings.",
  "permissions": ["scripting", "https://home-free-api.onrender.com/"],
  "host_permissions": [
    "*://*.realestate.com.au/*",
    "*://*.domain.com.au/*" //not used yet, just for future use//
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.realestate.com.au/*",
        "*://*.domain.com.au/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["logo.png"],
      "matches": ["<all_urls>"]
    }
  ]
}


